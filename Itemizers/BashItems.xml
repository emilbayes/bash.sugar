<?xml version="1.0"?>
<itemizer>

    <recipe name="itemizers.bash.comment">
        <class>ESCommentItem</class>
        <selector>comment</selector>
    </recipe>

    <recipe name="itemizers.bash.function">
        <selector>bash.function:has-child(function.name:capture(name)):capture(itemizer-firstused)</selector>
        <subrecipes>
            <include-root-recipes/>
        </subrecipes>
    </recipe>

    <recipe name="itemizers.bash.block">
        <class>ESCodeBlockItem</class>
        <start-selector>bash.block.open</start-selector>
        <end-selector>bash.block.close</end-selector>
        <subrecipes>
            <include-root-recipes/>
        </subrecipes>
    </recipe>

</itemizer>
