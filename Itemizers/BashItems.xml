<?xml version="1.0"?>
<itemizer>

    <recipe name="org.purl.net.mkhl.bash.itemizers.comment">
        <class>ESCommentItem</class>
        <selector>comment</selector>
    </recipe>

    <recipe name="org.purl.net.mkhl.bash.itemizers.function">
        <class>ESBaseItem</class>
        <selector>container.function:has-child(function.identifier:capture(name)):capture(itemizer-firstused)</selector>
        <subrecipes>
            <include-root-recipes/>
        </subrecipes>
    </recipe>

    <recipe name="org.purl.net.mkhl.bash.itemizers.block">
        <class>ESCodeBlockItem</class>
        <selector>container.block:has-child(keyword.block.begin:capture(name))</selector>
        <subrecipes>
            <include-root-recipes/>
        </subrecipes>
    </recipe>

</itemizer>
