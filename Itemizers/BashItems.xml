<?xml version="1.0"?>
<itemizer>

    <recipe name="itemizers.bash.comment">
        <class>ESCommentItem</class>
        <selector>bash comment</selector>
    </recipe>

    <recipe name="itemizers.bash.function">
        <selector>bash > container.function:has-child(function.identifier:capture(name)):capture(itemizer-firstused)</selector>
        <subrecipes>
            <include-root-recipes/>
        </subrecipes>
    </recipe>

    <recipe name="itemizers.bash.block">
        <class>ESCodeBlockItem</class>
        <selector>bash > container.block:has-child(keyword.block.begin:capture(name))</selector>
        <subrecipes>
            <include-root-recipes/>
        </subrecipes>
    </recipe>

</itemizer>
